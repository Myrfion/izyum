{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["ES6", "ES2015", "ESNext"],
    "outDir": "bin",
    "rootDir": ".",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "removeComments": true,
  },
  "exclude": [
    "node_modules",
    "lib",
    "test",
    "templates"
  ]
}